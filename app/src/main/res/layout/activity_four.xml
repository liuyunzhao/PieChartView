<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.cn.tempdemo.ThreeActivity">
    <com.cn.tempdemo.pieview.PieChartView4
        android:id="@+id/percentPieView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:centerTextColor="#000000"
        app:centerTextSize="18sp"
        app:circleWidth="40dp"
        app:dataTextColor="#ffffff"
        app:dataTextSize="7sp"/>

    <Button
        android:id="@+id/btn1"
        android:text="空心展示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn2"
        android:text="实心展示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
